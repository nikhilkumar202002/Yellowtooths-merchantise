<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1. Remove trailing slashes (e.g., /about/ -> /about)
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} (.+)/$
  RewriteRule ^ %1 [L,R=301]

  # 2. Serve valid files and directories directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 3. Rewrite routes to their .html file (e.g., /about -> /about.html)
  RewriteCond %{REQUEST_FILENAME}.html -f
  RewriteRule ^(.*)$ $1.html [L]

  # 4. Custom 404 Error Page
  ErrorDocument 404 /404.html
</IfModule>

# --- Cache Control for Performance ---
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Cache Static Assets (CSS, JS, Images) for 1 Year
  # Next.js hashes filenames, so it is safe to cache them forever.
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"

  # HTML files should not be cached aggressively to ensure updates are seen
  ExpiresByType text/html "access plus 5 minutes"
</IfModule>